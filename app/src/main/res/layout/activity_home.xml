<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:visibility="gone"
        android:background="@color/colorPrimary1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp"
        android:visibility="gone"
        android:id="@+id/cardview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/colorPrimary1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginTop="5sp"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/cardview"
            app:cardCornerRadius="10dp"
            android:visibility="gone"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="6dp"
            android:id="@+id/cardview1"
            app:cardBackgroundColor="@android:color/white"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Blood"
                android:fontFamily="@font/inter_bold"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary1"
                android:layout_gravity="center"
                android:layout_marginStart="30dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/blood_droplet"
                    android:layout_gravity="center"
                    android:layout_marginEnd="100dp"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="160dp"
            app:layout_constraintTop_toBottomOf="@+id/cardview"
            app:cardCornerRadius="10dp"
            android:visibility="gone"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="6dp"
            android:id="@+id/cardview2"
            app:cardBackgroundColor="@android:color/white"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donate Blood"
                android:fontFamily="@font/inter_bold"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary1"
                android:layout_gravity="center"
                android:layout_marginStart="30dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/healthcare"
                    android:layout_gravity="center"
                    android:layout_marginEnd="100dp"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:visibility="gone"
            android:layout_marginTop="280dp"
            app:layout_constraintTop_toBottomOf="@+id/cardview"
            app:cardCornerRadius="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="6dp"
            android:id="@+id/cardview3"
            app:cardBackgroundColor="@android:color/white"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search Blood \n Donor"
                android:fontFamily="@font/inter_bold"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary1"
                android:layout_gravity="center"
                android:layout_marginStart="30dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/search"
                    android:layout_gravity="center"
                    android:layout_marginEnd="100dp"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="400dp"
            app:layout_constraintTop_toBottomOf="@+id/cardview"
            app:cardCornerRadius="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="6dp"
            android:visibility="gone"
            android:id="@+id/cardview4"
            app:cardBackgroundColor="@android:color/white"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:fontFamily="@font/inter_bold"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary1"
                android:layout_gravity="center"
                android:layout_marginStart="30dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/history"
                    android:layout_gravity="center"
                    android:layout_marginEnd="100dp"/>

        </androidx.cardview.widget.CardView>
        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:itemIconTint="@color/maron"
            app:itemTextColor="@color/maron"
            android:background="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/bottom_nav_menu"/>
</androidx.constraintlayout.widget.ConstraintLayout>