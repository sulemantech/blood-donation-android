<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboard"
    tools:context=".onBoardingActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:src="@drawable/onboard"
        android:id="@+id/img"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="480dp"
        app:cardCornerRadius="45dp"
        app:cardElevation="4dp"
        android:id="@+id/cardview"
        app:layout_constraintTop_toBottomOf="@+id/img"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Source Pakistan "
            android:fontFamily="@font/inter_bold"
            android:textSize="20dp"
            android:id="@+id/blood"
            android:textColor="@color/black1"
            android:layout_marginBottom="110dp"
            android:layout_gravity="center">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco "
            android:fontFamily="@font/inter_bold"
            android:textSize="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="155dp"
            android:gravity="center">
        </TextView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:id="@+id/button1"
            android:textAllCaps="false"
            android:background="@drawable/btn_shape1"
            android:text="Don't Have an Account?"
            android:layout_marginEnd="30dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/button2"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_marginTop="130dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/btn_shape2"
            android:text="Already Have an Account?"
            android:layout_marginEnd="30dp"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>