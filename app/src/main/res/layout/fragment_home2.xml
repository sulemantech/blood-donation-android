        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:id="@+id/home1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/home_screen_heading"/>

        <ImageView
            android:layout_width="190dp"
            android:layout_height="140dp"
            app:layout_constraintTop_toBottomOf="@+id/home1"
            android:src="@drawable/top_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:src="@drawable/background_top_msg"
            android:id="@+id/cardview6"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="30sp"
            android:layout_marginStart="30sp"
            app:layout_constraintTop_toBottomOf="@+id/home1"
            android:scaleType="centerCrop" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are You Looking For Blood?"
            android:id="@+id/home"
            android:layout_marginTop="8dp"
            android:layout_marginStart="30dp"
            android:textAppearance="@style/home_screen_heading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview6" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/cardview5"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/home"
            android:src="@drawable/search_blood" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/linear"
            app:layout_constraintTop_toBottomOf="@id/home"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_a_plus" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_a_minus" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_b_plus" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_b_minus" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_ab_plus" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_ab_minus" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_o_plus" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_o_minus" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:id="@+id/blood_req"
            android:visibility="gone"
            android:text="Blood Requests"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="85dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear"
            android:textAppearance="@style/create_request"/>

        <TextView
            android:id="@+id/emergencyPatientsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency Patients"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/home_screen_heading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview5"/>
        <TextView
            android:id="@+id/tvCriticalStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Critical Patients"
            android:layout_marginStart="190dp"
            android:layout_marginTop="0dp"
            android:visibility="gone"
            android:textAppearance="@style/home_screen_heading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview5"/>

        <TextView
            android:id="@+id/tvSeeAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See All"
            android:textAppearance="@style/see_all"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="8dp"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview5"
            />
        <!-- RecyclerView for emergency patients -->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/critical_patient_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emergencyPatientsLabel"
            />

        <TextView
            android:id="@+id/are_you_looking_for_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are You Looking For?"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/home_screen_heading"
            app:layout_constraintTop_toBottomOf="@id/critical_patient_recyclerview" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/first_two_card_views"
            android:orientation="horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/are_you_looking_for_text">

            <FrameLayout
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:id="@+id/frame_layout_one"
                android:background="@drawable/background_home_screen_four_items"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- ConstraintLayout for centering content -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/img_create_request"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_blood_request"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintVertical_bias="0.5"/>

                    <TextView
                        android:id="@+id/txt_create_request"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blood Requests"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="11dp"
                        app:layout_constraintHorizontal_bias="0.5"
                        android:textAppearance="@style/items_headings"
                        app:layout_constraintTop_toBottomOf="@id/img_create_request"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:id="@+id/frame_layout_two"
                android:background="@drawable/background_home_screen_four_items"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="30dp"
                app:layout_constraintStart_toEndOf="@+id/frame_layout_one">

                <!-- ConstraintLayout for centering content -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/img_blood_donors"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_donate_blood"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintVertical_bias="0.5"/>

                    <TextView
                        android:id="@+id/txt_blood_donors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Find Donors"
                        app:layout_constraintTop_toBottomOf="@id/img_blood_donors"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        android:layout_marginTop="11dp"
                        android:textAppearance="@style/items_headings"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/last_two_card_views"
            android:orientation="horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/first_two_card_views">

            <FrameLayout
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:id="@+id/frame_layout_three"
                android:background="@drawable/background_home_screen_four_items"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- ConstraintLayout for centering content -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/img_blood_donor"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_blood_donor"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintVertical_bias="0.5"/>

                    <TextView
                        android:id="@+id/txt_blood_donor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Donate Blood"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="11dp"
                        app:layout_constraintHorizontal_bias="0.5"
                        android:textAppearance="@style/items_headings"
                        app:layout_constraintTop_toBottomOf="@id/img_blood_donor"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:id="@+id/frame_layout_four"
                android:background="@drawable/background_home_screen_four_items"
                android:layout_marginStart="30dp"
                app:layout_constraintStart_toEndOf="@+id/frame_layout_three"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- ConstraintLayout for centering content -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/img_blood_banks"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/bloddbank_neew"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintVertical_bias="0.5"/>

                    <TextView
                        android:id="@+id/txt_blood_banks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blood Banks"
                        app:layout_constraintTop_toBottomOf="@id/img_blood_banks"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        android:layout_marginTop="11dp"
                        android:textAppearance="@style/items_headings"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/last_three_card_views"
            android:orientation="horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/last_two_card_views">


            <FrameLayout
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:id="@+id/btn_five"
                android:background="@drawable/background_home_screen_four_items"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- ConstraintLayout for centering content -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/img_Add_donors"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/baseline_add_box_24"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintVertical_bias="0.5"/>

                    <TextView
                        android:id="@+id/txt_add_donors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Community\nDonors"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/img_Add_donors"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        android:layout_marginTop="11dp"
                        android:textAppearance="@style/items_headings"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn_five"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>