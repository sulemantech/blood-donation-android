<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pinkk"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary1"
            tools:ignore="MissingConstraints" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="35dp"
            app:cardElevation="4dp"
            android:id="@+id/cardview"
            android:backgroundTint="@color/colorPrimary1"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:fontFamily="@font/inter_bold"
                android:layout_marginTop="5sp"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/cardview"
            app:cardCornerRadius="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="6dp"
            android:id="@+id/cardview1"
            app:cardBackgroundColor="@android:color/white"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Requests"
                android:fontFamily="@font/inter_bold"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary1"
                android:layout_gravity="center"
                android:layout_marginStart="30dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/blood_droplet"
                android:layout_gravity="center"
                android:layout_marginEnd="100dp"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toBottomOf="@+id/cardview"
            app:cardCornerRadius="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="6dp"
            android:id="@+id/cardview2"
            app:cardBackgroundColor="@android:color/white"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donate Blood"
                android:fontFamily="@font/inter_bold"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary1"
                android:layout_gravity="center"
                android:layout_marginStart="26sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/healthcare"
                android:layout_gravity="center"
                android:layout_marginEnd="100dp"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="270dp"
            app:layout_constraintTop_toBottomOf="@+id/cardview"
            app:cardCornerRadius="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="6dp"
            android:id="@+id/cardview3"
            app:cardBackgroundColor="@android:color/white"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find Blood Donor"
                android:fontFamily="@font/inter_bold"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary1"
                android:layout_gravity="center"
                android:layout_marginStart="46dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search"
                android:layout_gravity="center"
                android:layout_marginEnd="100dp"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="390dp"
            app:layout_constraintTop_toBottomOf="@+id/cardview"
            app:cardCornerRadius="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="6dp"
            android:id="@+id/cardview4"
            app:cardBackgroundColor="@android:color/white"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity"
                android:fontFamily="@font/inter_bold"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary1"
                android:layout_gravity="center"
                android:layout_marginStart="8dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/history"
                android:layout_gravity="center"
                android:layout_marginEnd="100dp"/>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>