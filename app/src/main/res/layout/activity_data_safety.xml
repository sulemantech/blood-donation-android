<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TermConditionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:id="@+id/img_home"
            android:src="@drawable/header_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Safety Information"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:id="@+id/title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/inter_bold" />

        <TextView
            android:layout_width="60sp"
            android:layout_height="60dp"
            android:fontFamily="@font/inter_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28sp"
            android:drawableLeft="@drawable/back"
            android:layout_marginStart="25dp"
            android:textSize="25dp"
            android:id="@+id/backArrow"
            android:drawableTint="@color/white"
            android:gravity="center" />
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="Katlang Blood Donation &amp; Thalassemia Center Application"
                android:textSize="15sp"
                android:fontFamily="@font/opensanshebrew_regular"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_home" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:layout_marginStart="20sp"
                android:text="Data Safety Information"
                android:textSize="20sp"
                android:fontFamily="@font/opensanshebrew_regular"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text1" />

            <TextView
                android:id="@+id/text14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="12sp"
                android:layout_marginEnd="10dp"
                android:text="1. Data Collection and Usage"
                android:textSize="15sp"
                android:fontFamily="@font/opensanshebrew_regular"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text2" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="2sp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/opensanshebrew_regular"
                android:text="@string/we_collect_personal_information_name_email_contact_number_blood_group_city_to_provide_our_blood_donation_services_this_data_is_used_to_connect_users_with_blood_donation_requests_and_to_notify_them_of_relevant_opportunities"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text14" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10dp"
                android:text="2. Data Sharing"
                android:textSize="15sp"
                android:fontFamily="@font/opensanshebrew_regular"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text3" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="12sp"
                android:layout_marginEnd="15sp"
                android:text="- Your data is shared only with authorized personnel and other users for the purpose of blood donation."
                android:textSize="15sp"
                android:fontFamily="@font/opensanshebrew_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text4" />

            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10dp"
                android:text="3. Data Security"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/opensanshebrew_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text5" />

            <TextView
                android:id="@+id/text7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="12sp"
                android:layout_marginEnd="10sp"
                android:text="@string/we_implement_security_measures_such_as_encryption_to_protect_your_data_access_to_personal_data_is_restricted_to_authorized_personnel_only"
                android:textSize="15sp"
                android:fontFamily="@font/opensanshebrew_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text6" />

            <TextView
                android:id="@+id/text8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10dp"
                android:text="4. User Rights"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/opensanshebrew_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text7" />

            <TextView
                android:id="@+id/text9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="12sp"
                android:layout_marginEnd="10sp"
                android:text="- You can request the deletion or correction of your personal data by contacting us at +923451927809."
                android:textSize="15sp"
                android:fontFamily="@font/opensanshebrew_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text8" />

            <TextView
                android:id="@+id/text10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10dp"
                android:text="5. Compliance"
                android:textSize="15sp"
                android:fontFamily="@font/opensanshebrew_regular"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text9" />

            <TextView
                android:id="@+id/text11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="12sp"
                android:layout_marginEnd="10sp"
                android:fontFamily="@font/opensanshebrew_regular"
                android:text="- We ensure that our data practices comply with relevant laws, including GDPR."
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text10" />

            <TextView
                android:id="@+id/text12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10dp"
                android:text="6. Contact Information"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/opensanshebrew_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text11" />

            <TextView
                android:id="@+id/text13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="12sp"
                android:layout_marginEnd="10sp"
                android:text="- For any inquiries regarding your data or rights, you can contact us at katlangbdcenter@gmail.com."
                android:textSize="15sp"
                android:fontFamily="@font/opensanshebrew_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text12" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
