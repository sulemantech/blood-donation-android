<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/group"
    tools:context=".DonateBloodActivity">
    <TextView
        android:id="@+id/back_arrow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:fontFamily="@font/inter_bold"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
        android:layout_marginTop="50dp"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/blood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donate Blood"
        android:fontFamily="@font/inter_bold"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_arrow" />
    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Fill out the form to log and share your blood donation status"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/opensanshebrew_regular"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/blood"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/blood_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Type"
        android:fontFamily="@font/inter_bold"
        android:textSize="15dp"
        android:visibility="gone"
        android:textColor="@color/black1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text" />

    <AutoCompleteTextView
        android:id="@+id/spinnerBloodGroup"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="22dp"
        android:paddingStart="15dp"
        android:paddingEnd="20dp"
        android:fontFamily="@font/opensanshebrew_regular"
        android:inputType="textCapSentences"
        android:hint="@string/BloodGroup"
        android:backgroundTint="@color/maron"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blood_type"
        android:entries="@array/blood_groups" />

    <AutoCompleteTextView
        android:id="@+id/edLocation"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:hint="Location"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="22dp"
        android:paddingStart="15dp"
        android:fontFamily="@font/opensanshebrew_regular"
        android:inputType="textCapSentences"
        android:backgroundTint="@color/maron"
        android:paddingEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerBloodGroup"
        android:entries="@array/pakistan_cities" />
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:visibility="gone"
        android:fontFamily="@font/inter_bold"
        android:textSize="15dp"
        android:textColor="@color/black1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edLocation" />

    <EditText
        android:id="@+id/ed_date"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Donation Date"
        android:paddingStart="15dp"
        android:paddingEnd="20dp"
        android:inputType="none"
        android:focusable="false"
        android:clickable="true"
        android:fontFamily="@font/opensanshebrew_regular"
        android:layout_marginTop="12dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="22dp"
        android:backgroundTint="@color/maron"
        app:layout_constraintTop_toBottomOf="@+id/date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/donation_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preferred Donation Date"
        android:fontFamily="@font/inter_bold"
        android:textSize="15dp"
        android:textColor="@color/black1"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:layout_marginStart="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edLocation" />

    <EditText
        android:id="@+id/ed_donation_date"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/ed_border"
        android:hint="DD/MM/YYYY"
        android:visibility="gone"
        android:paddingStart="15dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/donation_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/donateButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/buttons"
        android:gravity="center"
        android:text="Donate"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@+id/ed_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donateButton"
        android:layout_marginTop="5dp"
      />
</androidx.constraintlayout.widget.ConstraintLayout>
