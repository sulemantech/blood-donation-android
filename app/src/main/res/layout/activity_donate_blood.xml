<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonateBloodActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/back"
        android:layout_marginStart="30dp"
        android:textSize="25dp"
        android:id="@+id/back_arrow"
        android:textColor="@color/black"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Donation"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        android:textSize="25dp"
        android:id="@+id/blood"
        app:layout_constraintTop_toBottomOf="@+id/back_arrow"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please let us know if ypu need the blood for yourself
 or for some one else  "
        android:layout_marginStart="30dp"
        android:layout_marginEnd="100dp"
        android:textSize="15dp"
        android:id="@+id/text"
        app:layout_constraintTop_toBottomOf="@+id/blood"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/bllod_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="46dp"
        android:fontFamily="@font/inter_bold"
        android:text="Blood Type"
        android:textColor="@color/black1"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/spinner_border"
        app:layout_constraintTop_toBottomOf="@+id/bllod_type"
        android:entries="@array/select"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/black1"
        android:id="@+id/location"
        android:layout_marginTop="20dp"
        android:layout_marginStart="35dp"
        android:textSize="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ed_location"
        android:background="@drawable/ed_border"
        android:padding="8dp"
        android:maxLines="1"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Type here..."
        android:paddingStart="15dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/location"
        android:drawablePadding="8dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/donate"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/ed_location"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Donate"
        android:backgroundTint="@color/white"
        android:layout_marginEnd="30dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/donate"
        app:layout_constraintTop_toBottomOf="@+id/donate"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/btn_donate" />
</androidx.constraintlayout.widget.ConstraintLayout>