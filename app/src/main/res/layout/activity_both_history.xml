<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BothHistoryActivity">

    <!-- Top Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/myHistoryLayout"
        android:background="@color/colorPrimary1"
        tools:ignore="MissingConstraints" />

    <!-- CardView with Title and Back Arrow -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="35dp"
        app:cardElevation="4dp"
        android:id="@+id/cardview"
        android:backgroundTint="@color/colorPrimary1"
        tools:ignore="MissingConstraints">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="46dp"
                android:drawableLeft="@drawable/back"
                android:drawableTint="@color/white"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:textSize="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter_bold"
                android:text="Activity"
                android:textColor="@color/white"
                android:textSize="25dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Tab Layout -->
    <LinearLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_button"
        app:layout_constraintTop_toBottomOf="@+id/cardview"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_my_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="4dp"
            android:text="My History"
            android:textAllCaps="false"
            android:backgroundTint="@color/background"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_request_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:backgroundTint="@color/background"
            android:text="Request History"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_donation_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:backgroundTint="@color/background"
            android:text="Donation History"
            android:textAllCaps="false"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- RecyclerView for My History -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_history_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/history_recyclerview"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout"/>

    <!-- RecyclerView for Request History -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/request_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        tools:listitem="@layout/history_recyclerview"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout"/>

    <!-- RecyclerView for Donation History -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/donation_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        tools:listitem="@layout/history_recyclerview"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout"/>

</androidx.constraintlayout.widget.ConstraintLayout>
