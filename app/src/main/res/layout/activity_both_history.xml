<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BothHistoryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/myHistoryLayout"
        android:background="@color/colorPrimary1"
        tools:ignore="MissingConstraints" />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:backgroundTint="@color/colorPrimary1"
        app:cardCornerRadius="35dp"
        app:cardElevation="4dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="64dp"
            android:drawableLeft="@drawable/back"
            android:drawableTint="@color/white"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:textSize="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/inter_bold"
            android:text="Activity "
            android:textColor="@color/white"
            android:textSize="25dp" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_button"
        app:layout_constraintTop_toBottomOf="@+id/cardview"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_my_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="4dp"
            android:onClick="showDonationHistory"
            android:text="Request History"
            android:textAllCaps="false"
            android:backgroundTint="@color/button_bg"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/btn_request_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:backgroundTint="@color/background"
            android:onClick="showDonationHistory"
            android:text="Other Requests"
            android:textAllCaps="false"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/btn_donation_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:backgroundTint="@color/background"
            android:onClick="showDonationHistory"
            android:text="Donation History"
            android:textAllCaps="false"
            android:textColor="@color/black" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/history_recyclerview"
        app:layout_constraintTop_toBottomOf="@id/tab_layout"
        android:id="@+id/request_recyclerview"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/requestHistoryLayout"
        android:visibility="gone"
        android:background="@color/colorPrimary1"
        tools:ignore="MissingConstraints" >
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:listitem="@layout/history_recyclerview"
            app:layout_constraintTop_toBottomOf="@id/tab_layout"
            android:id="@+id/request_recyclerview2"/>

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/donationHistoryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary1"
        android:visibility="gone"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hey"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="50dp"/>

        <!-- Donation History Layout components -->
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
