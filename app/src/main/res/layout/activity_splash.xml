<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SplashActivity"
    android:gravity="center"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    >

    <TextView
        android:textColor="@color/maron"
        android:textSize="38sp"
        android:background="@drawable/ayat"
        android:layout_width="290sp"
        android:layout_height="108sp"
        android:layout_marginTop="50dp"
        android:id="@+id/ayat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:textSize="18sp"
        android:text="And whoever saves a life, it is as though he has saved all of humanity."
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginTop="6sp"
        android:gravity="center"
        android:id="@+id/text_eng"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ayat"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="88sp"
        android:layout_height="25sp"
        android:layout_marginTop="2dp"
        android:layout_gravity="center"
        android:text="(Quran 5:32)"
        android:gravity="center"
        android:textColor="@color/maron"
        android:background="@drawable/ayat_btn"
        app:layout_constraintTop_toBottomOf="@+id/text_eng"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="250sp"
        android:layout_height="186sp"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        android:drawableTint="@color/white"
        android:layout_marginTop="189sp"
        android:background="@drawable/top_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="80sp"
        android:textColor="@color/white"
        android:text="@string/katlang_blood_donation_amp_thalassemia_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"/>

</androidx.constraintlayout.widget.ConstraintLayout>