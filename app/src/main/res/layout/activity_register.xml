<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:src="@drawable/drop"
            android:id="@+id/img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/maron"
            android:id="@+id/blood_donation"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blood_donation"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black1"
            android:id="@+id/name"
            android:layout_marginTop="10dp"
            android:layout_marginStart="35dp"
            android:textSize="18dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ed_name"
            android:background="@drawable/ed_border"
            android:padding="8dp"
            android:maxLines="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Enter Name"
            android:paddingStart="15dp"
            android:layout_marginTop="5dp"
            android:paddingEnd="20dp"
            android:drawableRight="@drawable/ic_vector_person"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:drawablePadding="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_name"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black1"
            android:id="@+id/phone"
            android:layout_marginTop="10dp"
            android:layout_marginStart="35dp"
            android:textSize="18dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ed_phone"
            android:background="@drawable/ed_border"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="+92 000 00000"
            android:paddingStart="15dp"
            android:paddingEnd="20dp"
            android:drawableRight="@drawable/ic_vector_phone"
            app:layout_constraintTop_toBottomOf="@+id/phone"
            android:drawablePadding="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-Mail"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_phone"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black1"
            android:id="@+id/email"
            android:layout_marginStart="35dp"
            android:textSize="18dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ed_email"
            android:background="@drawable/ed_border"
            android:padding="8dp"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Enter Email"
            android:paddingStart="15dp"
            android:paddingEnd="20dp"
            android:drawableRight="@drawable/ic_vector_email"
            app:layout_constraintTop_toBottomOf="@+id/email"
            android:drawablePadding="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_email"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black1"
            android:id="@+id/password"
            android:layout_marginStart="35dp"
            android:textSize="18dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ed_password"
            android:background="@drawable/ed_border"
            android:padding="8dp"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Enter Password"
            android:paddingStart="15dp"
            android:paddingEnd="20dp"
            android:drawableRight="@drawable/ic_vector_lock"
            app:layout_constraintTop_toBottomOf="@+id/password"
            android:drawablePadding="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_password"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black1"
            android:id="@+id/date_of_birth"
            android:layout_marginStart="35dp"
            android:textSize="18dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ed_date_birth"
            android:background="@drawable/ed_border"
            android:padding="8dp"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="DD/MM/YYYY"
            android:paddingStart="15dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/date_of_birth"
            android:drawablePadding="8dp"/>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/line50"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.47"/>

        <TextView
            android:id="@+id/blood_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:layout_marginTop="10dp"
            android:text="Blood Group"
            android:textColor="@color/black1"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="@+id/ed_date_birth"
            app:layout_constraintTop_toBottomOf="@+id/ed_date_birth" />

        <TextView
            android:id="@+id/want_to_donate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="Donate Blood?"
            android:textColor="@color/black1"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/line50"
            app:layout_constraintTop_toBottomOf="@+id/ed_date_birth" />


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:layout_centerInParent="true"
            android:background="@drawable/spinner_border"
            android:entries="@array/select"
            app:layout_constraintEnd_toStartOf="@+id/line50"
            app:layout_constraintStart_toStartOf="@+id/ed_date_birth"
            app:layout_constraintTop_toBottomOf="@+id/blood_group" />

        <EditText
            android:id="@+id/no_yes"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/ed_border"
            android:drawablePadding="8dp"
            android:hint="No"
            android:maxLines="1"
            android:padding="8dp"
            android:paddingStart="15dp"
            app:layout_constraintEnd_toEndOf="@+id/ed_date_birth"
            app:layout_constraintStart_toStartOf="@+id/line50"
            app:layout_constraintTop_toBottomOf="@+id/want_to_donate" />

        <TextView
            android:id="@+id/sign_up"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/signup_button"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@+id/no_yes"
            app:layout_constraintStart_toStartOf="@+id/spinner"
            app:layout_constraintTop_toBottomOf="@+id/no_yes" />
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_up" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>