<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/group"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:tint="@color/maron"
            android:layout_marginTop="30dp"
            android:contentDescription="Profile Image"
            android:src="@drawable/top_image" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:layout_gravity="center"
            android:fontFamily="@font/open_sans_hebrew"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="22dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please  edit the information and click on save"
            android:layout_gravity="center"
            android:fontFamily="@font/open_sans_hebrew"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="13dp"
            android:hint="Full Name"
            android:inputType="textCapSentences"

            android:paddingStart="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:drawableTint="@color/maron"
            android:drawableRight="@drawable/ic_vector_person"
            android:backgroundTint="@color/maron" />

        <EditText
            android:id="@+id/edEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:hint="Email Address"
            android:paddingStart="10dp"
            android:paddingLeft="5dp"
            android:inputType="textCapSentences"

            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:drawableRight="@drawable/ic_vector_email"
            android:backgroundTint="@color/maron" />

        <EditText
            android:id="@+id/edPhone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:hint="Phone"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:drawableRight="@drawable/mobile"
            android:paddingStart="10dp"
            android:backgroundTint="@color/maron"
            android:inputType="phone" />

        <EditText
            android:id="@+id/edDateBirth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:hint="Date of Birth"
            android:paddingStart="10dp"
            android:drawableRight="@drawable/ic_birthday"
            android:inputType="date"
            android:backgroundTint="@color/maron"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:focusable="false" />

        <Spinner
            android:id="@+id/spinnerGender"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:entries="@array/gender_array"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/maron" />


        <Spinner
            android:id="@+id/spinnerBloodGroup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:entries="@array/blood_groups" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/bloodType"
            android:background="@color/maron"
            />



        <Spinner
            android:id="@+id/edLocation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:hint="City"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:entries="@array/pakistan_cities"
            android:inputType="text" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/bloodType"
            android:background="@color/maron" />


        <EditText
            android:id="@+id/edLastdonationdate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="9dp"
            android:hint="Last Donation Date"
            android:inputType="date"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingStart="10dp"
            android:backgroundTint="@color/maron"
            android:focusable="false" />

        <CheckBox
            android:id="@+id/noYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:checked="true"
            android:buttonTint="@color/maron"
            android:backgroundTint="@color/maron"
            android:text="Ready To Donate Blood" />

        <TextView
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/update_button"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp" />

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:visibility="gone"
            />

    </LinearLayout>
</ScrollView>
