<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:layout_marginBottom="5dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/bank"
                android:src="@drawable/ic_blood_bank"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/bank"
                android:layout_marginStart="25dp"
                android:layout_marginTop="60dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear_top"
                android:padding="5dp">


                <LinearLayout
                    android:id="@+id/ll_middle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="73dp"
                    android:layout_marginEnd="25sp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llpatientName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_gravity="left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Khyber Medical University\n(KMU)"
                            android:textAppearance="@style/patient_name" />

                        <TextView
                            android:id="@+id/condition2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_marginStart="26dp"
                            android:text="Critical"
                            android:visibility="gone"
                            android:textAppearance="@style/patient_condition" />

                        <TextView
                            android:id="@+id/condition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="26dp"
                            android:background="@drawable/waiting_status"
                            android:gravity="center_horizontal|center_vertical"
                            android:textAlignment="center"
                            android:visibility="gone"
                            android:textAppearance="@style/patient_blood_status" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/contactInfo"
                        android:layout_marginTop="1dp"
                        android:text="Khyber Medical University, Phase 5, "
                        android:textAppearance="@style/hospital_name"
                        />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llpatientName"
                        android:layout_marginTop="1dp"
                        android:text="+92-91-9217703"
                        android:textAppearance="@style/blood_request_date" />

                    <TextView
                        android:id="@+id/textview_website1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/dateRequired"
                        android:layout_marginTop="1dp"
                        android:text="http://www.sundas.org/"
                        android:textAppearance="@style/hospital_name" />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="370dp"
                    android:id="@+id/image_blood_group"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/blood_bottle"
                    android:layout_gravity="right"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginStart="280dp"
                android:layout_below="@+id/linear_top"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_world"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/website"
                    android:layout_marginEnd="5sp"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/phonefram"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/phone_call"
                    android:gravity="center"
                    android:layout_marginEnd="5sp"
                    android:layout_gravity="right"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />


                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/sharefram"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/share"
                    android:gravity="center"
                    android:layout_marginStart="3dp"
                    android:layout_gravity="right"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
