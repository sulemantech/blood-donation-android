<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BloodbankActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/cardView_bank">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@drawable/objects"
            android:id="@+id/object"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:fontFamily="@font/inter_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
            android:layout_marginStart="25dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:id="@+id/back_arrow"
            android:textColor="@color/black"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/what_is_blood_bank"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        android:id="@+id/blood_bank"
        app:layout_constraintTop_toBottomOf="@+id/cardView_bank"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a_blood_bank_is_a_center_where_blood_gathered_as_result_of_blood_donation_is_stored_as_preserved_for_later_use_in_blood_transfusion_the_term_blood_bank_typically_refers_to_divisionof_a_hospital_where_the_storage_of_blood_product_occurs_and_where_proper_testing_is_performed"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textSize="15dp"
        android:id="@+id/handing"
        app:layout_constraintTop_toBottomOf="@+id/blood_bank"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A Facility Where,"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        android:id="@+id/facility"
        app:layout_constraintTop_toBottomOf="@+id/handing"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donor recruitment is made. "
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textSize="15dp"
        android:id="@+id/line1"
        android:drawableLeft="@drawable/line"
        android:drawablePadding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/facility"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donor are properly bleed. "
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:textSize="15dp"
        android:id="@+id/line2"
        android:drawableLeft="@drawable/line"
        android:drawablePadding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product making is performed "
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:textSize="15dp"
        android:id="@+id/line3"
        android:drawableLeft="@drawable/line"
        android:drawablePadding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood &amp; Products are issued "
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:textSize="15dp"
        android:drawableLeft="@drawable/line"
        android:drawablePadding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/line3"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>