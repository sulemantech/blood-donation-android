<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BloodbankActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/cardview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/top_header"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="42dp"
            android:drawableLeft="@drawable/back"
            android:layout_marginStart="20dp"
            android:textSize="25dp"
            android:id="@+id/back_arrow"
            android:drawableTint="@color/white"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Banks"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_bold"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>


    <ImageView
        android:layout_width="190dp"
        android:layout_height="140dp"
        app:layout_constraintTop_toBottomOf="@+id/cardview"
        android:src="@drawable/bloodbank_img"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:src="@drawable/background_top_msg"
        android:id="@+id/cardview6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="30sp"
        android:layout_marginStart="30sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cardview"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/what_is_blood_bank"
        android:fontFamily="@font/open_sans_hebrew"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="16dp"
        android:id="@+id/blood_bank"
        app:layout_constraintTop_toBottomOf="@+id/cardview6"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/a_blood_bank_is_a_facility_that_collects_stores_processes_and_distributes_blood_and_its_components_to_hospitals_and_medical_centers_it_ensures_a_safe_and_adequate_supply_of_blood_for_patients_in_need_of_transfusions"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:id="@+id/handing"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blood_bank"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/benefits_of_blood_banks"
        android:fontFamily="@font/open_sans_hebrew"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="16dp"
        android:id="@+id/facility"
        app:layout_constraintTop_toBottomOf="@+id/handing"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facility">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/life_saving_resource_provides_essential_blood_for_surgeries_emergencies_and_chronic_illnesses"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="15dp"
        android:id="@+id/line1"
        android:drawableTint="@color/maron"
        android:drawableLeft="@drawable/line"
        android:drawablePadding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/facility"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/improved_health_outcomes_enhances_patient_recovery_and_survival_rates_through_timely_blood_transfusions"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="15dp"
        android:id="@+id/line2"
        android:drawableTint="@color/maron"
        android:drawableLeft="@drawable/line"
        android:drawablePadding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/community_support_encourages_community_participation_and_volunteerism_fostering_a_sense_of_solidarity"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textSize="15dp"
        android:id="@+id/line3"
        android:drawableLeft="@drawable/line"
        android:drawablePadding="15dp"
        android:drawableTint="@color/maron"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quality_assurance_ensures_the_safety_and_quality_of_blood_through_rigorous_testing_and_processing"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textSize="15dp"
        android:id="@+id/line4"
        android:drawableLeft="@drawable/line"
        android:drawablePadding="15dp"
        android:drawableTint="@color/maron"
        app:layout_constraintTop_toBottomOf="@+id/line3"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:text="@string/readiness_for_emergencies_maintains_a_ready_supply_of_blood_for_disaster_response_and_critical_situations"
        android:layout_marginStart="10dp"
        android:textSize="15dp"
        android:drawableLeft="@drawable/line"
        android:drawablePadding="15dp"
        android:drawableTint="@color/maron"
        app:layout_constraintTop_toBottomOf="@+id/line4"
        android:textColor="@color/black"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>