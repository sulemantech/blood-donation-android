<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/drop"
        android:id="@+id/img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Donation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black1"
            android:id="@+id/blood_donation"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blood_donation"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black1"
            android:layout_marginTop="10dp"
            android:id="@+id/name"
            android:layout_marginStart="25dp"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ed_name"
            android:background="@drawable/ed_border"
            android:padding="8dp"
            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Enter Name"
            android:paddingStart="15dp"
            android:paddingEnd="20dp"
            android:drawableRight="@drawable/vector"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:drawablePadding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_name"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black1"
            android:layout_marginTop="15dp"
            android:id="@+id/password"
            android:layout_marginStart="25dp"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ed_password"
            android:background="@drawable/ed_border"
            android:padding="8dp"
            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Enter Password"
            android:paddingStart="15dp"
            android:paddingEnd="20dp"
            android:drawableRight="@drawable/password_icon"
            app:layout_constraintTop_toBottomOf="@+id/password"
            android:drawablePadding="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_password"
            android:textColor="@color/black1"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="75dp"
            android:id="@+id/forget_password"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_password"
            android:textColor="@color/black1"
            android:fontFamily="@font/inter_bold"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="30dp"
            android:id="@+id/reset"
            android:textSize="15dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/login"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:layout_marginStart="30dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/ed_password"
            android:background="@drawable/btn_shape2"
            android:text="Login"
            android:layout_marginEnd="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't Have Account?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login"
            android:textColor="@color/black1"
            android:layout_marginTop="12dp"
            android:id="@+id/have_account"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login"
            app:layout_constraintStart_toEndOf="@+id/have_account"
            android:textColor="@color/black1"
            android:fontFamily="@font/inter_bold"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="70dp"
            android:id="@+id/register"
            android:textSize="15dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>