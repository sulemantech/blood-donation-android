<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:src="@drawable/drop"
        android:id="@+id/img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img"
            android:fontFamily="@font/inter_bold"
            android:textStyle=""
            android:textColor="@color/maron"
            android:id="@+id/blood_donation"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blood_donation"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black1"
            android:layout_marginTop="5dp"
            android:id="@+id/name"
            android:layout_marginStart="35dp"
            android:textSize="18dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ed_username"
            android:background="@drawable/ed_border"
            android:padding="8dp"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Enter Name"
            android:paddingStart="15dp"
            android:paddingEnd="20dp"
            android:drawableRight="@drawable/ic_vector_person"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:drawablePadding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_username"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black1"
            android:layout_marginTop="20dp"
            android:id="@+id/password"
            android:layout_marginStart="35dp"
            android:textSize="18dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ed_password"
            android:background="@drawable/ed_border"
            android:padding="8dp"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Enter Password"
            android:paddingStart="15dp"
            android:paddingEnd="20dp"
            android:drawableRight="@drawable/ic_vector_lock"
            app:layout_constraintTop_toBottomOf="@+id/password"
            android:drawablePadding="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_password"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="75dp"
            android:id="@+id/forget_password"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_password"
            android:textColor="@color/black1"
            android:fontFamily="@font/inter_bold"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="28dp"
            android:id="@+id/reset"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/login"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@+id/ed_password"
            android:background="@drawable/login_button"
            android:layout_marginEnd="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't Have Account?"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="10dp"
            android:id="@+id/have_account"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login"
            app:layout_constraintStart_toEndOf="@+id/have_account"
            android:textColor="@color/black1"
            android:fontFamily="@font/inter_bold"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="108dp"
            android:id="@+id/register"
            android:textSize="15dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>