<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateRequestActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
            android:fontFamily="@font/inter_bold"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/reqest_text"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp" />

        <TextView
            android:id="@+id/reqest_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Request"
            android:fontFamily="@font/inter_bold"
            android:textSize="25dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back_arrow"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp" />

        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/please_let_us_know_if_ypu_need_the_blood_for_yourself_n_for_some_one_else"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/reqest_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/text"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Myself"
                android:fontFamily="@font/inter_bold"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="For other"
                android:fontFamily="@font/inter_bold"
                android:checked="false" />
        </RadioGroup>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Name"
            android:fontFamily="@font/inter_bold"
            android:textSize="15dp"
            android:textColor="@color/black1"
            app:layout_constraintTop_toBottomOf="@+id/radio_group"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp" />

        <EditText
            android:id="@+id/ed_name"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/ed_border"
            android:hint="Enter Name"
            android:paddingStart="15dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />



        <TextView
            android:id="@+id/bllod_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blood_type"
            android:fontFamily="@font/inter_bold"
            android:textSize="15sp"
            android:textColor="@color/black1"
            app:layout_constraintTop_toBottomOf="@+id/ed_name"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/spinner_border"
            app:layout_constraintTop_toBottomOf="@+id/bllod_type"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:entries="@array/select" />

        <TextView
            android:id="@+id/required_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/required_unit"
            android:fontFamily="@font/inter_bold"
            android:textSize="15sp"
            android:textColor="@color/black1"
            app:layout_constraintTop_toBottomOf="@+id/spinner"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/spinner_border"
            app:layout_constraintTop_toBottomOf="@+id/required_unit"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:entries="@array/required_units" />

        <TextView
            android:id="@+id/required_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/required_date"
            android:fontFamily="@font/inter_bold"
            android:textSize="15sp"
            android:textColor="@color/black1"
            app:layout_constraintTop_toBottomOf="@+id/spinner2"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp" />

        <EditText
            android:id="@+id/ed_date_required"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/ed_border"
            android:hint="@string/dd_mm_yyyy"
            android:paddingStart="15dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/required_date"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />

        <TextView
            android:id="@+id/hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital / Location"
            android:fontFamily="@font/inter_bold"
            android:textSize="15sp"
            android:textColor="@color/black1"
            app:layout_constraintTop_toBottomOf="@+id/ed_date_required"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp" />

        <EditText
            android:id="@+id/ed_hospital"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/ed_border"
            android:hint="Type here.."
            android:paddingStart="15dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/hospital"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />


        <TextView
            android:id="@+id/send_request"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/signin_btn"
            android:gravity="center"
            android:text="@string/send_request"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/ed_hospital"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/send_request" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
