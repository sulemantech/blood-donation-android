<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateRequestActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Request"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="30dp"
        android:textSize="25dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please let us know if ypu need the blood for yourself
 or for some one else"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="100dp"
        android:textSize="15dp"
        android:id="@+id/text"
        android:textColor="@color/black"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radio_group"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:layout_marginStart="30dp"
            android:text="My Self"
            android:fontFamily="@font/inter_bold"
            android:checked="true"
            android:id="@+id/radio1"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:layout_marginStart="30dp"
            android:text="For other"
            android:fontFamily="@font/inter_bold"
            android:checked="false"
            android:id="@+id/radio2"/>
    </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radio_group"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black1"
            android:id="@+id/name"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ed_name"
            android:background="@drawable/ed_border"
            android:padding="8dp"
            android:maxLines="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Enter Name"
            android:paddingStart="15dp"
            android:layout_marginTop="5dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:drawablePadding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_name"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black1"
            android:id="@+id/phone"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ed_phone"
            android:background="@drawable/ed_border"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Enter Age"
            android:paddingStart="15dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/phone"
            android:drawablePadding="8dp"/>
        <TextView
            android:id="@+id/bllod_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_bold"
            android:text="Blood Type"
            android:textColor="@color/black1"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_phone" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/spinner_border"
            app:layout_constraintTop_toBottomOf="@+id/bllod_type"
            android:entries="@array/select"/>
        <TextView
            android:id="@+id/required_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_bold"
            android:text="Required Unit"
            android:textColor="@color/black1"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/spinner_border"
            app:layout_constraintTop_toBottomOf="@+id/required_unit"
            android:entries="@array/select"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Required Date"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner2"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black1"
            android:id="@+id/date_of_birth"
            android:layout_marginStart="15dp"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ed_date_required"
            android:background="@drawable/ed_border"
            android:padding="8dp"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="DD/MM/YYYY"
            android:paddingStart="15dp"
            android:paddingEnd="20dp"
            android:drawableRight="@drawable/password_icon"
            app:layout_constraintTop_toBottomOf="@+id/date_of_birth"
            android:drawablePadding="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Required Date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_date_required"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black1"
            android:layout_marginTop="10dp"
            android:id="@+id/want_to_donate"
            android:layout_marginStart="15dp"
            android:textSize="15dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/no_yes"
            android:background="@drawable/ed_border"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="DD/MM/YYYY"
            android:paddingStart="15dp"
            android:paddingEnd="20dp"
            android:drawableRight="@drawable/password_icon"
            app:layout_constraintTop_toBottomOf="@+id/want_to_donate"
            android:drawablePadding="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/no_yes"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black1"
            android:id="@+id/hospital"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ed_hospital"
            android:background="@drawable/ed_border"
            android:padding="8dp"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Type here..."
            android:paddingStart="15dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/hospital"
            android:drawablePadding="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_hospital"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black1"
            android:id="@+id/location"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ed_location"
            android:background="@drawable/ed_border"
            android:padding="8dp"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Type here..."
            android:paddingStart="15dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/location"
            android:drawablePadding="8dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/send_request"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/ed_location"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Send Request"
            android:backgroundTint="@color/white"
            android:layout_marginEnd="30dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>