<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPasswordActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password?"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="30dp"
        android:textSize="25dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="130dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="100dp"
        android:textSize="15dp"
        android:id="@+id/text"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Mail or Phone Number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/black1"
        android:id="@+id/email"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:textSize="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ed_email"
        android:background="@drawable/ed_border"
        android:padding="8dp"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Enter Email or Phone number"
        android:paddingStart="15dp"
        android:paddingEnd="20dp"
        android:drawableRight="@drawable/email"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:drawablePadding="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/send_otp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/ed_email"
        android:background="@drawable/btn_shape2"
        android:text="Send OTP"
        android:layout_marginEnd="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>