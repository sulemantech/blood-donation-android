<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HistoryFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General"
        android:textSize="25dp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/black"
        android:layout_marginTop="170dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textSize="20dp"
        android:id="@+id/edit_profile"
        android:drawableLeft="@drawable/group_write"
        android:drawablePadding="15dp"
        android:layout_marginTop="220dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Bank"
        android:textSize="20dp"
        android:id="@+id/blood_bank"
        android:drawableLeft="@drawable/ic_blood_drop"
        android:drawablePadding="20dp"
        android:layout_marginTop="260dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share with Friends"
        android:textSize="20dp"
        android:id="@+id/share"
        android:drawableLeft="@drawable/ic_share"
        android:drawablePadding="15dp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate our App"
        android:textSize="20dp"
        android:id="@+id/rate_us"
        android:drawableLeft="@drawable/ic_star"
        android:drawablePadding="15dp"
        android:layout_marginTop="340dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy Control"
        android:textSize="25dp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/black"
        android:layout_marginTop="380dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feedback &amp; Suggestion"
        android:textSize="25dp"
        android:drawableLeft="@drawable/ic_feedback"
        android:drawablePadding="15dp"
        android:layout_marginTop="430dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="25dp"
        android:drawableLeft="@drawable/ic_logout"
        android:drawablePadding="15dp"
        android:layout_marginTop="470dp"
        android:layout_marginStart="20dp"/>

</FrameLayout>