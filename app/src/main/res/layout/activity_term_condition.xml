<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TermConditionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="5dp"
            android:id="@+id/cardview"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/top_header"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="42dp"
                android:drawableLeft="@drawable/back"
                android:layout_marginStart="20dp"
                android:textSize="25dp"
                android:id="@+id/back_arrow"
                android:drawableTint="@color/white"
                android:gravity="center" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/term_condition"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_bold"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15sp"
        app:layout_constraintTop_toBottomOf="@+id/cardview"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/text1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Katlang Blood Donation &amp; Thalassemia Center Application"
            app:layout_constraintTop_toBottomOf="@+id/cardview"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/text2"
            android:layout_marginStart="20sp"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Effective Date: 13-08-2024"
            app:layout_constraintTop_toBottomOf="@+id/text1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2sp"
            android:textSize="15sp"
            android:id="@+id/text3"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Welcome to the Katlang Blood Donation &amp; Thalassemia Center application. By using our app, you agree to the following Terms &amp; Conditions:"
            app:layout_constraintTop_toBottomOf="@+id/text2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:textSize="15sp"
            android:id="@+id/text4"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:text="1. Acceptance of Terms"
            app:layout_constraintTop_toBottomOf="@+id/text3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:textSize="15sp"
            android:id="@+id/text5"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:text="By registering and using the app, you agree to these Terms &amp; Conditions. If you do not agree, please do not use the app"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:textSize="15sp"
            android:id="@+id/text6"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:text="2. User Responsibilities"
            app:layout_constraintTop_toBottomOf="@+id/text5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:textSize="15sp"
            android:id="@+id/text7"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:text="@string/you_must_provide_accurate_and_up_to_date_information_during_registration_you_agree_not_to_misuse_the_app_including_but_not_limited_to_using_it_for_unauthorized_or_unlawful_purposes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text6"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:textSize="15sp"
            android:id="@+id/text8"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:text="3. Data Collection and Use"
            app:layout_constraintTop_toBottomOf="@+id/text7"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:textSize="15sp"
            android:id="@+id/text9"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:text="We collect personal information (Name, Email, Contact Number, Blood Group, City) to facilitate blood donation requests and connect donors with recipients. Your data will be used solely for these purposes."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text8"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:textSize="15sp"
            android:id="@+id/text10"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:text="4. Data Sharing"
            app:layout_constraintTop_toBottomOf="@+id/text9"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:textSize="15sp"
            android:id="@+id/text11"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:text="Your data may be shared with authorized personnel of the Katlang Blood Donation &amp; Thalassemia Center and with other registered users in case of a blood donation request."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:textSize="15sp"
            android:id="@+id/text12"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:text="5. Account Termination"
            app:layout_constraintTop_toBottomOf="@+id/text11"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:textSize="15sp"
            android:id="@+id/text13"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:text="We reserve the right to terminate or suspend your account if we believe you have violated these Terms &amp; Conditions."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:textSize="15sp"
            android:id="@+id/text14"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:text="6. Updates to the Terms"
            app:layout_constraintTop_toBottomOf="@+id/text13"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:textSize="15sp"
            android:id="@+id/text15"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:text="We may update these Terms &amp; Conditions from time to time. You will be notified of any significant changes, and your continued use of the app constitutes acceptance of those changes."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text14"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:textSize="15sp"
            android:id="@+id/text16"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:text="7. Limitation of Liability"
            app:layout_constraintTop_toBottomOf="@+id/text15"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:textSize="15sp"
            android:id="@+id/text17"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:text="The app is provided as is without any warranties, express or implied. We are not liable for any damages arising from the use or inability to use the app."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text16"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:textSize="15sp"
            android:id="@+id/text18"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:text="8. Contact Information"
            app:layout_constraintTop_toBottomOf="@+id/text17"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:textSize="15sp"
            android:id="@+id/text19"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:text="For any questions or concerns, please contact us at +923451927809."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text18"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@+id/text19"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>