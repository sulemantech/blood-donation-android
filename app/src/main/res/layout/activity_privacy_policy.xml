<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrivacyPolicyActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:id="@+id/img_home"
            android:src="@drawable/header_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Privacy"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:id="@+id/title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/inter_bold" />

        <TextView
            android:layout_width="60sp"
            android:layout_height="60dp"
            android:fontFamily="@font/inter_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28sp"
            android:drawableLeft="@drawable/back"
            android:layout_marginStart="25dp"
            android:textSize="25dp"
            android:id="@+id/backArrow"
            android:drawableTint="@color/white"
            android:gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/text1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Katlang Blood Donation &amp; Thalassemia Center Application"
                app:layout_constraintTop_toBottomOf="@+id/img_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/text2"
                android:layout_marginStart="20sp"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Effective Date: 13-08-2024"
                app:layout_constraintTop_toBottomOf="@+id/text1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:textSize="15sp"
                android:id="@+id/text3"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10dp"
                app:layout_constraintStart_toStartOf="parent"
                android:text="This Privacy Policy explains how we collect, use, and protect your information:"
                app:layout_constraintTop_toBottomOf="@+id/text2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:textSize="15sp"
                android:id="@+id/text4"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                android:text="1. Information We Collect"
                app:layout_constraintTop_toBottomOf="@+id/text3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:textSize="15sp"
                android:id="@+id/text5"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/personal_information_name_email_contact_number_blood_group_city_usage_data_information_on_how_you_use_the_app_such_as_interaction_with_features"
                app:layout_constraintTop_toBottomOf="@+id/text4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:textSize="15sp"
                android:id="@+id/text6"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                android:text="2. How We Use Your Information"
                app:layout_constraintTop_toBottomOf="@+id/text5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:textSize="15sp"
                android:id="@+id/text7"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:text="@string/to_connect_blood_donors_with_those_in_need_to_notify_users_of_blood_donation_requests_that_match_their_blood_group_and_location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:textSize="15sp"
                android:id="@+id/text8"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                android:text="3. Data Sharing"
                app:layout_constraintTop_toBottomOf="@+id/text7" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:textSize="15sp"
                android:id="@+id/text9"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:text="@string/we_share_your_information_with_authorized_personnel_and_other_users_as_necessary_to_fulfill_blood_donation_requests_we_do_not_sell_or_rent_your_personal_information_to_third_parties"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:textSize="15sp"
                android:id="@+id/text10"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                android:text="4. Data Security"
                app:layout_constraintTop_toBottomOf="@+id/text9" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:textSize="15sp"
                android:id="@+id/text11"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:text="We use industry-standard measures to protect your data, including encryption and secure servers. However, no method of transmission over the internet is 100% secure."
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:textSize="15sp"
                android:id="@+id/text12"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                android:text="5. User Control"
                app:layout_constraintTop_toBottomOf="@+id/text11" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:textSize="15sp"
                android:id="@+id/text13"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:text="@string/you_can_access_or_update_your_personal_information_through_your_profile_settings_you_can_also_request_deletion_of_your_account"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text12" />

        </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
