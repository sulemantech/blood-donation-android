<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrivacyPolicyActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/cardview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/top_header"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="42dp"
            android:drawableLeft="@drawable/back"
            android:layout_marginStart="20dp"
            android:textSize="25dp"
            android:id="@+id/back_arrow"
            android:drawableTint="@color/white"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Privacy"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_bold"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15sp"
            app:layout_constraintTop_toBottomOf="@+id/cardview"
            >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/text1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Katlang Blood Donation &amp; Thalassemia Center Application"
        app:layout_constraintTop_toBottomOf="@+id/cardview"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/text2"
        android:layout_marginStart="20sp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Effective Date: 13-08-2024"
        app:layout_constraintTop_toBottomOf="@+id/text1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"
        android:textSize="15sp"
        android:id="@+id/text3"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="This Privacy Policy explains how we collect, use, and protect your information:"
        app:layout_constraintTop_toBottomOf="@+id/text2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:textSize="15sp"
        android:id="@+id/text4"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:text="1. Information We Collect"
        app:layout_constraintTop_toBottomOf="@+id/text3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:textSize="15sp"
        android:id="@+id/text5"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/personal_information_name_email_contact_number_blood_group_city_usage_data_information_on_how_you_use_the_app_such_as_interaction_with_features"
        app:layout_constraintTop_toBottomOf="@+id/text4"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:textSize="15sp"
        android:id="@+id/text6"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:text="2. How We Use Your Information"
        app:layout_constraintTop_toBottomOf="@+id/text5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:textSize="15sp"
        android:id="@+id/text7"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:text="@string/to_connect_blood_donors_with_those_in_need_to_notify_users_of_blood_donation_requests_that_match_their_blood_group_and_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:textSize="15sp"
        android:id="@+id/text8"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:text="3. Data Sharing"
        app:layout_constraintTop_toBottomOf="@+id/text7"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:textSize="15sp"
        android:id="@+id/text9"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:text="@string/we_share_your_information_with_authorized_personnel_and_other_users_as_necessary_to_fulfill_blood_donation_requests_we_do_not_sell_or_rent_your_personal_information_to_third_parties"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text8"/>
  <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:textSize="15sp"
        android:id="@+id/text10"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:text="4. Data Security"
        app:layout_constraintTop_toBottomOf="@+id/text9"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:textSize="15sp"
        android:id="@+id/text11"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:text="We use industry-standard measures to protect your data, including encryption and secure servers. However, no method of transmission over the internet is 100% secure."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text10"/>
 <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:textSize="15sp"
        android:id="@+id/text12"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:text="5. User Control"
        app:layout_constraintTop_toBottomOf="@+id/text11"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:textSize="15sp"
        android:id="@+id/text13"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:text="You have the right to request the deletion of your account and personal data at any time by contacting us at +92345192780"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text12"/>
  <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:textSize="15sp"
        android:id="@+id/text14"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:text="6. Compliance with Laws"
        app:layout_constraintTop_toBottomOf="@+id/text13"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:textSize="15sp"
        android:id="@+id/text15"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:text="We comply with applicable data protection laws, including GDPR and any other relevant regulations."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text14"/>
 <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:textSize="15sp"
        android:id="@+id/text16"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:text="7. Changes to This Privacy Policy"
        app:layout_constraintTop_toBottomOf="@+id/text15"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:textSize="15sp"
        android:id="@+id/text17"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:text="We may update this policy from time to time. You will be notified of any significant changes."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text16"/>
 <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:textSize="15sp"
        android:id="@+id/text18"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:text="8. Contact Information"
        app:layout_constraintTop_toBottomOf="@+id/text17"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:textSize="15sp"
        android:id="@+id/text19"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:text="For any questions or concerns, please contact us at +923451927809."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text18"/>



        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@+id/text19"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>