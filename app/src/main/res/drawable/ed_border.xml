<!-- res/drawable/edittext_border.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Background color when focused -->
            <stroke
                android:width="2dp"
            android:color="@android:color/black" /> <!-- Border color when focused -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Background color when not focused -->
            <stroke
                android:width="2dp"
            android:color="@android:color/holo_red_dark" /> <!-- Border color when not focused -->
        </shape>
    </item>
</selector>
