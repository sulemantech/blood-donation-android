<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="home_screen_heading">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#B20B1F</item>
        <item name="fontFamily">@font/open_sans_hebrew_regular</item>
    </style>
    <style name="patient_name">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/open_sans_hebrew_bold</item>
    </style>
    <style name="blood_request_date">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#555555</item>
        <item name="fontFamily">@font/open_sans_hebrew_regular</item>
    </style>
    <style name="hospital_name">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#555555</item>
        <item name="fontFamily">@font/open_sans_hebrew_regular</item>
    </style>
    <style name="patient_condition">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/maron</item>
        <item name="fontFamily">@font/open_sans_hebrew_bold</item>
    </style>
    <style name="blood_type">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#555555</item>
        <item name="fontFamily">@font/open_sans_hebrew_bold</item>
    </style>
    <style name="blood_group_unit_needed">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#555555</item>
        <item name="fontFamily">@font/open_sans_hebrew_bold</item>
    </style>
    <style name="label_text">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#555555</item>
        <item name="fontFamily">@font/open_sans_hebrew_regular</item>
    </style>
    <style name="patient_blood_status">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="items_headings">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#555555</item>
        <item name="fontFamily">@font/open_sans_medium</item>
    </style>
    <style name="see_all">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#282828</item>
        <item name="fontFamily">@font/open_sans_hebrew_bold</item>
    </style>
    <style name="create_request">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#555555</item>
        <item name="fontFamily">@font/open_sans_hebrew_bold</item>
    </style>
    <style name="CustomTabTextStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Custom DatePickerDialog style -->
    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:datePickerDialogTheme">@style/CustomDatePicker</item>
    </style>

    <style name="CustomDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:headerBackground">#B20B1F</item>
        <item name="android:datePickerMode">spinner</item>
    </style>

</resources>